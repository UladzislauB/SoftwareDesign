<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/science"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_sin"
            style="@style/Button"
            android:text="@string/sin" />

        <Button
            android:id="@+id/btn_ln"
            style="@style/Button"
            android:text="@string/ln" />

        <Button
            android:id="@+id/btn_pi"
            style="@style/Button"
            android:text="@string/pi" />

        <Button
            android:id="@+id/btn_sc_op"
            style="@style/Button"
            android:text="@string/parenthesis_left" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/science"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_cos"
            style="@style/Button"
            android:text="@string/cos" />

        <Button
            android:id="@+id/btn_log"
            style="@style/Button"
            android:text="@string/log" />

        <Button
            android:id="@+id/btn_e"
            style="@style/Button"
            android:text="@string/exp" />

        <Button
            android:id="@+id/btn_sc_cl"
            style="@style/Button"
            android:text="@string/parenthesis_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/science"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_percent"
            style="@style/Button"
            android:text="@string/percent" />

        <Button
            android:id="@+id/btn_fact"
            style="@style/Button"
            android:text="@string/fact" />

        <Button
            android:id="@+id/btn_pow"
            style="@style/Button"
            android:text="@string/pow"/>

        <Button
            android:id="@+id/btn_sqrt"
            style="@style/Button"
            android:text="@string/sqrt" />
    </LinearLayout>

</LinearLayout>
