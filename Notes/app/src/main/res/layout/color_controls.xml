                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/silver_color_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/silver_color_btn"
                    android:paddingTop="@dimen/color_btn_padding_top"
                    android:textAlignment="center" />
            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>
</layout>