                    android:paddingTop="@dimen/color_btn_padding_top"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/maize_color_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/maize_color_btn"
                    android:paddingTop="@dimen/color_btn_padding_top"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/electric_lime_color_btn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/electric_lime_color_btn"
                    android:paddingTop="@dimen/color_btn_padding_top"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/aquamarine_color_btn"
